# Database Configuration
POSTGRES_DB=graphdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_secure_password

# Connection String for Backend
DB_CONNECTION_STRING=Host=db;Database=graphdb;Username=postgres;Password=change_this_secure_password

# API Configuration
ASPNETCORE_ENVIRONMENT=Development
API_PORT=5000

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:5000/api

# Optional: For production use
# ASPNETCORE_ENVIRONMENT=Production
# ASPNETCORE_URLS=http://+:80

# Node options (if needed for legacy OpenSSL)
NODE_OPTIONS=--openssl-legacy-provider

# Database Seeding Configuration
# Mode: None, Investigation, Business, IT, Large, All
SEEDING_MODE=Investigation
# AutoReseed: true (очищает и заполняет заново), false (заполняет только пустую БД)
SEEDING_AUTORESEED=false
